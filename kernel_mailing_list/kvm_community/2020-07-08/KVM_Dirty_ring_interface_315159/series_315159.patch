+	 */
+	new.as_id = as_id;
 
 	r = kvm_set_memslot(kvm, mem, old, &new, as_id, KVM_MR_DELETE);
 	if (r)
@@ -1257,6 +1262,7 @@ int __kvm_set_memory_region(struct kvm *kvm,
 	if (!mem->memory_size)
